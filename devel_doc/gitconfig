	macros = Macros
	manpage = Manuals
	optimization = Optimization
	other = Other
	packaging = Packaging
	plugins = Plugins
	python = Python bindings
	regression = Regression
	removed = Removals
	rfe = Enhancements
	security = Security
	transaction = Transaction
[changelog "aliases"]
	regression = bug
