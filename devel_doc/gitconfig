[cherryPlan]
	backportPatterns = ^\\(backported from commit (.*)\\)$
[cherryPlan "automark"]
	pick = test,documentation,build
[changelog]
	# Loosely based on https://keepachangelog.com/en/1.1.0/
	sections = rfe,changed,deprecated,removed,bug,security
	prefixes = regression,spec,build
	ignore = cleanup,test,documentation
[changelog "headings"]
	bug = Fixed
	build = Build
	changed = Changed
	deprecated = Deprecated
	regression = Regression
	removed = Removed
	rfe = Added
	security = Security
	spec = Packaging
[changelog "aliases"]
	crypto = security
	regression = bug
